# Dupabase â€” Local Docker Environment
# Copy this to .env and fill in your values:
#   cp .env.example .env

# YOUR PostgreSQL (required)
# Must have CREATEROLE + CREATEDB privileges
# URL-encode special chars in password (@ = %40, # = %23)
DATABASE_URL=postgresql://user:password@stech-postgres:5432/dbname

# Platform JWT secret (required, min 32 characters)
# Generate with: openssl rand -base64 48
PLATFORM_JWT_SECRET=your-platform-secret-key-min-32-characters

# Host port mapping (container always listens on 3333 internally)
DUPABASE_PORT=16733

# Public URL
SITE_URL=http://localhost:16733

# Admin user (optional, auto-created on startup)
# ADMIN_EMAIL=admin@dupabase.local
# ADMIN_PASSWORD=admin-password-change-me

# Pool Manager
MAX_CONNECTIONS_PER_DB=5
GLOBAL_MAX_CONNECTIONS=100
POOL_IDLE_TIMEOUT_SECONDS=300

# Default Auth Settings for New Projects
DEFAULT_ENABLE_SIGNUP=true
DEFAULT_AUTOCONFIRM=true
DEFAULT_PASSWORD_MIN_LENGTH=6
