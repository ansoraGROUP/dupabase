# Dupabase â€” Production Environment
# Copy this to .env and fill in your values:
#   cp .env.example .env
# Then encrypt with: make encrypt ENV=prod

# YOUR PostgreSQL (required)
# Must have CREATEROLE + CREATEDB privileges
DATABASE_URL=postgresql://dupabase:your-secure-password@postgres:5432/dupabase

# Platform JWT secret (required, min 32 characters)
# Generate with: openssl rand -base64 48
PLATFORM_JWT_SECRET=

# Public URL (your domain with HTTPS)
SITE_URL=https://your-domain.com

# Host port (behind nginx/caddy reverse proxy)
DUPABASE_PORT=3333

# Admin user (required for production)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://your-domain.com

# Pool Manager (higher defaults for production)
MAX_CONNECTIONS_PER_DB=10
GLOBAL_MAX_CONNECTIONS=200
POOL_IDLE_TIMEOUT_SECONDS=300

# Default Auth Settings
DEFAULT_ENABLE_SIGNUP=true
DEFAULT_AUTOCONFIRM=false
DEFAULT_PASSWORD_MIN_LENGTH=8

# Backup Encryption (optional, falls back to PLATFORM_JWT_SECRET)
# BACKUP_ENCRYPTION_KEY=
